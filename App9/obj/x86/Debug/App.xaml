<Application
    x:Class="App9.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App9"
    RequestedTheme="Light">
<Application.Resources>
        <Style TargetType="Image" x:Key="HeaderImage">
            <Setter Property="Width" Value="300"></Setter>
            <Setter Property="Height" Value="100"></Setter>
            <Setter Property="Stretch" Value="UniformToFill"></Setter>
        </Style>
    
    <Style TargetType="Button" x:Key="MyBtnStyle">
        <Setter Property="Background" Value="Blue"></Setter>
        <Setter Property="FontFamily" Value="Arial"></Setter>
        <Setter Property="FontSize" Value="48"></Setter>
    </Style>
        <SolidColorBrush Color="Red" x:Key="DonutPageBackground"></SolidColorBrush>
        <SolidColorBrush Color="Brown" x:Key="CoffeePageBackground"></SolidColorBrush>
        <SolidColorBrush Color="Green" x:Key="SchedulePageBackground"></SolidColorBrush>
        <SolidColorBrush Color="White" x:Key="CompletePageBackground"></SolidColorBrush>
    </Application.Resources>
</Application>

